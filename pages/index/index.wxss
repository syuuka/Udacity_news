.nav{
  height: 80rpx;
  background: #34A1E2;
  width:100%;
  display: flex;
}
.nav_item{
  margin-left: 20rpx;
  flex-grow: 1;
  height: 40rpx;
  font-size: 30rpx;
  color: #fff;
}
.nav_item select{
  border-bottom: 2rpx solid #fff;
  font-weight: 32rpx;
}
.main_content{
  width: 100%;
}
.head_line{
  position: relative;
  height: 400rpx;
  align-items: center;
  margin: 20rpx;
}
.hot_lable{
  position: absolute;
  top: 0;
  right:0rpx;
  width: 80rpx;
  height: 42rpx;
  align-items: right;
  font-size: 30rpx;
  line-height: 42rpx;
  border-radius: 0rpx 5rpx 0rpx 20rpx;
  text-align: right;
  background-color: red;
  color: #fff;
  opacity: 0.5;
  padding-right: 5rpx;
}
.head_title{
  position: absolute;
  font-size: 35rpx;
  line-height: 47rpx;
  color: #fff;
  font-weight: 100rpx;
  bottom: 70rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.head_bottom{
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  padding-top: 20rpx;
  display: flex;
  background-color: rgba(255, 255, 255, 0.2)
}
.news_bottom{
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  padding-top: 20rpx;
  display: flex;
  background-color: rgba(255, 255, 255, 0.2)
}
.head_sours{
  position: relative;
  color: #fff;
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.6;
  margin-left: 20rpx;
  flex-grow: 1;
}
.head_datetime{
  color: #fff;
  font-size: 30rpx;
  margin-left: 30rpx;
  line-height: 42rpx;
  opacity: 0.6;
  margin-bottom: 10rpx;
}
.head_image{
  z-index: -1;
  position: absolute;
  height: 400rpx;
  padding-right: 20rpx;
  right: 0;
  left: 0;
  width: 710rpx;
}
.news_list{
  position: relative;
  width: 750rpx;
  flex-grow: 1;
}
.news_item{
  position: relative;
  width: 710rpx;
  height: 200rpx;
  margin-left: 20rpx;
  display: flex;
  border-bottom: 1px solid #0f0f0f3f;
}
.news_item_left{
  position: relative;
  left: 0;
  width: 500rpx;
  margin-right: 20rpx;
}
.news_item_img{
  height: 160rpx;
  width: 200rpx;
  position: absolute;
  right: 0;
  top: 10rpx;
}
.news_title{
  margin-top: 30rpx;
  font-size: 35rpx;
  line-height: 47rpx;
  color: #000;
  font-weight: 100rpx;
  padding-right: 20rpx;  
}
.news_sours{
  color: #000;
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.6;
  flex-grow: 1;
}
.news_datetime{
  color: #000;
  font-size: 30rpx;
  margin-left: 30rpx;
  line-height: 42rpx;
  opacity: 0.6;
  margin-bottom: 10rpx;
}
