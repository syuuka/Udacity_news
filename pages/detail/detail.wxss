.title_line{
  position: relative;
  border-top: 4rpx solid rgba(34, 144, 247, 0.664);
  border-bottom: 4rpx solid rgba(0, 0, 0, 0.2);
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.title{
  position: relative;
  font-size: 50rpx;
  line-height: 60rpx;
  margin-top: 30rpx;
  margin-right: 20rpx;
}
.title_bottom{
  display: flex;
  position: relative;
  bottom: 10rpx;
  flex-direction: row;
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.6;
  margin-top: 20rpx;
}
.bottom_left{
  display: flex;
  flex-direction: row
}
.news_date{
  margin-left: 20rpx;
}
.bottom_right{
  flex-grow: 1;
  text-align: right;
  margin-left: 20rpx;
}
.detail_title{
  margin: 20rpx;
}
.news_p{
  font-size: 30rpx;
  line-height: 42rpx;
  text-indent: 2em;
}
.news_text{
  font-size: 30rpx;
  line-height: 42rpx;
  font-weight: bolder;
  text-align: center;
}
.news_image{
  width: 710rpx;
  height: 400rpx;
}